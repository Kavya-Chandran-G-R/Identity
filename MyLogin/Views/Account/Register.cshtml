@model RegisterDTO
@{
    ViewData["Title"] = "Register";
}

<form method="post" class="border p-3 mt-4" asp-controller="Account" asp-action="Register">
    <fieldset>
        <legend>Register</legend>

        <div asp-validation-summary="All"></div> 
        <div class="form-group">
            <label asp-for="PersonName" class="form-label mt-4"></label>
            <input asp-for="PersonName" class="form-control">
            <span asp-validation-for="PersonName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label mt-4"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="form-label mt-4"></label>
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label mt-4"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label mt-4"></label>
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <fieldset class="form-group">
            <legend class="mt-4">Radio buttons</legend>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="UserType" value="User" checked="">
                <label class="form-check-label" for="User">User</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="UserType" value="Admin">
                <label class="form-check-label" for="Admin">Admin</label>
            </div>
        </fieldset>
        <div class="form-group pt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back To Lists</a>
        </div>

    </fieldset>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}